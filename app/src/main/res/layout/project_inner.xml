<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/our_alumni_style">

        <ImageView
            android:id="@+id/project_pic"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_bb_project" />

        <TextView
            android:id="@+id/project_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/project_pic"
            android:layout_margin="10dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/project_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/project_title"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:layout_toRightOf="@+id/project_pic"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/detail_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap for detail.."
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="7sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>