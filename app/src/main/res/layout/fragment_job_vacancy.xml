<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C23B22">

    <Button
        android:id="@+id/findJobVacancy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/button_search_ouralumni"
        android:drawableRight="@drawable/ic_bb_findalumni"
        android:padding="10dp"
        android:text="@string/find_job_vacancy_btn"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black_faded"
        android:textSize="15sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_jobVacancy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/findJobVacancy"></android.support.v7.widget.RecyclerView>

</RelativeLayout>